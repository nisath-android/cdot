<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".activities.main.ptt.pttvoice.PTTVoiceFragment">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/ptt_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@android:color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ptt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10dp">

            <!-- Top Bar: Back + Name + Icons -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ptt_back_navigation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ptt_recent_userstatus_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/white_color"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/active_status"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="15dp"
                        android:translationZ="90dp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                        app:layout_constraintEnd_toEndOf="@+id/img_profile"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toStartOf="@+id/img_profile"
                        app:layout_constraintTop_toTopOf="@+id/img_profile"
                        app:layout_constraintVertical_bias="1" />
                    <!-- Profile Icon -->
                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Profile Image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ptt_person"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/img_profile"
                        app:layout_constraintTop_toTopOf="@id/img_profile"
                        app:layout_constraintBottom_toBottomOf="@id/img_profile"/>


                    <Button
                        android:id="@+id/img_recent_voice"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Message Icon"
                        android:scaleX="-1"
                        android:src="@drawable/ptt_recent_voice"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ptt_create_voice_message_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"

                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ptt_recent_userstatus_card"
                app:strokeColor="@color/white_color"
                app:strokeWidth="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp">


                    <!-- Circular Push-to-Talk Button -->
                    <FrameLayout
                        android:id="@+id/ptt_button_container"
                        android:layout_width="350dp"
                        android:layout_height="350dp"
                        android:layout_marginTop="24dp"
                        android:padding="4sp"
                        android:translationZ="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/ptt_record_mic_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_margin="12dp"
                            android:background="@drawable/bg_ripple_circle"
                            app:cardCornerRadius="175dp"
                            app:cardElevation="3dp"
                            app:strokeColor="@color/white_color"
                            app:strokeWidth="2dp" >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp">

                                <View
                                    android:id="@+id/wave_circle"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ptt_bg_circle_wave"
                                    android:visibility="visible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                                <!-- Outer Circle (dynamic border color) -->
                                <View
                                    android:id="@+id/outer_ring"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="20dp"
                                    android:background="@drawable/bg_circle_ring"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/img_mic"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:contentDescription="Mic"
                                    android:src="@drawable/voip_micro_on"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </FrameLayout>
                    <!-- Instruction -->
                    <TextView
                        android:id="@+id/tv_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="10dp"
                        android:text="Hold the button, hear the beep and talk."
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ptt_button_container" />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginStart="12dp"
                       android:layout_marginEnd="12dp"
                       android:layout_marginBottom="16dp"
                       android:layout_gravity="center_horizontal"
                       android:gravity="center"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintTop_toBottomOf="@id/tv_instruction">
                       <!-- Volume Down Icon -->
                       <ImageView
                           android:id="@+id/btn_volume_down"
                           android:layout_width="24dp"
                           android:layout_height="24dp"

                           android:contentDescription="Volume Down"
                           android:src="@drawable/ptt_volume_down"
                           android:layout_gravity="center_vertical" />

                       <!-- Spacer -->
                       <androidx.legacy.widget.Space
                           android:layout_width="8dp"
                           android:layout_height="0dp" />

                       <!-- Volume SeekBar -->
                       <SeekBar
                           android:id="@+id/volume_seekbar"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"

                           android:progressTint="@color/ptt_active_mic"
                           android:thumbTint="@color/ptt_active_mic" />

                       <!-- Spacer -->
                       <androidx.legacy.widget.Space
                           android:layout_width="8dp"
                           android:layout_height="0dp" />

                       <!-- Volume Up Icon -->
                       <ImageView
                           android:id="@+id/btn_volume_up"
                           android:layout_width="24dp"
                           android:layout_height="24dp"
                           android:contentDescription="Volume Up"
                           android:src="@drawable/ptt_volume_high"
                           android:layout_gravity="center_vertical" />
                   </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btn_toggle_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/white_color"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="Speaker"
                android:textSize="10sp"
                android:translationZ="0dp"
                app:icon="@drawable/icon_speaker"
                app:iconPadding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ptt_create_voice_message_card" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

</layout>