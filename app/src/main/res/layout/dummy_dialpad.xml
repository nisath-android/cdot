<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:layout_margin="5dip">
    <EditText android:layout_height="wrap_content"
        android:layout_width="fill_parent" android:id="@+id/phone_number"
        android:layout_marginTop="20dip" android:layout_marginBottom="10dip"
        android:maxLines="1" android:scrollHorizontally="true"
        android:textSize="33sp" android:freezesText="true"
        android:focusableInTouchMode="true" android:editable="true"
        android:cursorVisible="true">
    </EditText>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout1"
        android:layout_marginTop="10dip">
        <Button android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="1"
            android:id="@+id/one"/>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="2" android:id="@+id/two"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="3" android:id="@+id/three"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout2"
        android:layout_marginTop="10dip">
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="4" android:id="@+id/four"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="5" android:id="@+id/five"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="6" android:id="@+id/six"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout3"
        android:layout_marginTop="10dip">
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="7" android:id="@+id/seven"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="8" android:id="@+id/eight"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="9" android:id="@+id/nine"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout4"
        android:layout_marginTop="10dip">
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="*"
            android:id="@+id/asterisk"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="0" android:id="@+id/zero"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content"
            android:layout_width="0dp" android:text="#" android:id="@+id/hash"></Button>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout5"
        android:layout_gravity="center" android:gravity="center"
        android:layout_marginTop="20dip">
        <Button android:layout_height="wrap_content" android:text="Dial"
            android:layout_weight="1" android:layout_width="0dp" android:id="@+id/dialButton"></Button>
        <Button android:layout_height="wrap_content" android:text="Backspace"
            android:layout_weight="1" android:layout_width="0dp" android:id="@+id/deleteButton"></Button>
    </LinearLayout>
</LinearLayout>
