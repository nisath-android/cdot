<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="selectCountryClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="newContactClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="newConferenceClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="transferCallClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="viewModel"
            type="org.naminfo.activities.main.dialer.viewmodels.DialerViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/mobion"
            android:src="@drawable/mobion_icon"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:onClick="@{ ()->viewModel.startPTT()}"
            android:textAllCaps="true" />

        <!--<LinearLayout
            android:id="@+id/select_country_layout"
            android:layout_below="@+id/image1"
