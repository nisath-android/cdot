<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Blue fog outer shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="18dp" />
            <padding android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp" />
            <stroke android:width="2dp" android:color="#5571BEF6" /> <!-- Light blue fog -->
        </shape>
    </item>

    <!-- Inner white card background -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#CFF4F6" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
