<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color -->
    <solid android:color="#FFFFFF"/>

    <!-- Corner radius -->
    <corners android:radius="24dp"/>

    <!-- Outline stroke -->
    <stroke
        android:width="2dp"
        android:color="@color/primary_light_color" /> <!-- Change this color as you like -->

    <!-- Optional padding -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>
